%if 0%{?fedora} || 0%{?rhel} > 7
%bcond_without python3
%bcond_without extras
%else
%bcond python3
%bcond extras
%endif

%define pkgname fleure-db
%define common_desc fleure-db is a utility to analyze updateinfo.xml provides updates \
information for systems running RPM-based linux distributions such like RHEL \
(primary target), CentOS and Fedora.

Name:           %{pkgname}
Version:        @VERSION@
Release:        1%{?dist}
Summary:        An utility to analyze updateinfo data
Group:          Development/Libraries
License:        AGPLv3+ and GPLv3
URL:            https://github.com/ssato/%{pkgname}
Source0:        %{pkgname}-%{version}.tar.gz
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:      noarch
BuildRequires:  python2-devel
BuildRequires:  python2-setuptools
%if %{with python3}
BuildRequires:  python3-devel
BuildRequires:  python3-setuptools
BuildRequires:  python3-PyYAML
%endif
# yum-utils is neede for yum-builddep in rhel.
%if 0%{?rhel}
BuildRequires:  yum-utils
%endif
Requires:       python2-anyconfig
Requires:       python2-setuptools
Requires(post): systemd
Requires(preun): systemd
Requires(postun): systemd
Requires:       python2-Cython
Requires:       python2-gensim-addons
%if %{with python3}
Requires:       python3-Cython
%endif

%description
%common_desc

%if %{with python3}
%package -n python3-%{pkgname}
Summary:        Generic access to configuration files in some formats
Group:          Development/Libraries
Requires:       python3-PyYAML
Requires:       python3-setuptools

%description -n python3-%{pkgname}
%{common_desc}
%endif

%prep
%setup -q -n %{pkgname}-%{version}

%if %{with python3}
rm -rf %{py3dir}
cp -a . %{py3dir}
%endif

%build
%py2_build
%if %{with python3}
%py3_build
%endif

%install
%py2_install
%if %{with python3}
%py3_install
%endif

#%%post
#%%systemd_post %{name}-makecache.service
#
#%%postun
#%%systemd_postun %{name}-makecache.service
#
#%%preun
#%%systemd_preun %{name}-makecache.service

%files
%defattr(-,root,root,-)
%doc README.rst
%{python2_sitelib}/*
%{_bindir}/fleure-db
#%%{_unitdir} causes an error...
/usr/lib/systemd/system/*.*
# These shoult not be edited by user so not %%config
%{_sysconfdir}/fleure/db.d/*.yml

%if %{with python3}
%files -n python3-%{pkgname}
%defattr(644,root,root,755)
%doc README.rst
%{python3_sitelib}/*
%attr(755,root,root) %{_bindir}/fleure-db*
%endif

